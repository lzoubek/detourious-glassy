
# ifdef LIST
#  undef LIST
# endif
#define LIST(NAME,SIGNAL,STATE)					\
	program {									\
		name: NAME;								\
		signal: SIGNAL;							\
		source: "e";							\
		action: STATE_SET STATE 0.0;			\
		transition: DECELERATE 0.5;				\
		target: "base";							\
	}

# ifdef TEXT
#  undef TEXT
# endif
#define TEXT(NAME,SIGNAL,STATE)					\
	program {									\
		name: NAME;								\
		signal: SIGNAL;							\
		source: "e";							\
		action: STATE_SET STATE 0.0;			\
		target: "e.text.label";					\
	}

group {
	name: "e/widgets/ilist";
	data.item: "stacking" "above";
	data.item: "selectraise" "on";

	parts {
		part {
			name: "base";
			type: RECT;
	
			description {
				state: "default" 0.0;
				color: COLOR_LIST_BG;
			}

			description {
				state: "active" 0.0;
				color: COLOR_LIST_BG_ACTIVE;
			}
		}

		part {
			name: "e.swallow.icon";
			type: SWALLOW;

			description {
				state: "default" 0.0;
				align: 0.0 0.5;
				aspect: 1 1;
				aspect_preference: VERTICAL;

				rel1 { 
					offset: 8 5; 
				}

				rel2 { 
					relative: 0.0 1.0; 
					offset: 5 -6; 
				}
			}
		}

		part {
			name: "e.text.label";
			type: TEXT;
			mouse_events: 0;
			scale: 1;

			description {
				state: "default" 0.0;
				color: 60 60 60 255;

				rel1 { 
					to_x: "e.swallow.icon"; 
					relative: 1.0 0.0; 
					offset: 5 5; 
				}

				rel2 { 
					offset: -6 -3; 
				}

				TEXT_NORMAL("ilist_item", 0.0 0.5, 1 1);
			}

			description {
				state: "active" 0.0;
				inherit: "default" 0.0;
				color: 255 255 255 255;
			}
		}
		part {
		    name: "e.swallow.end";
		    type: SWALLOW;
		    description {
				state: "default" 0.0;
				align: 1.0 0.5;
				aspect: 1.0 1.0;
				aspect_preference: VERTICAL;
				rel1 {
					relative: 1.0  0.0;
					offset: -5    4;
				}
				rel2 {
					relative: 1.0  1.0;
					offset: -5   -5;
				}
		    }
		}

	}

	programs {
		LIST("active_list", "e,state,selected", "active");
		LIST("unactive_list", "e,state,unselected", "default");
		TEXT("active_text", "e,state,selected", "active");
		TEXT("unactive_text", "e,state,unselected", "default");
	}
}

